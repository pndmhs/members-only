<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/header.ejs") %>
    
    <main>
      <% if (user) { %>
        <div class="form-container">
          <h2>Join Secret Club</h2>
          <form method="post">
            <div class="form-group">
              <input
                type="text"
                name="join_code"
                id="join_code"
                placeholder="Enter secret code to join secret club"
              />
            </div>
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } else { %>
        <h2>You must login to see this page</h2>
      <% } %>
    </main>
  </body>
</html>
