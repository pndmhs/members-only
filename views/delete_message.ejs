<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/header.ejs") %>
    
    <main class="delete-message-main">
      <% if (user && user.status === "admin") { %>
        <h2>Are you sure you want to delete this message?</h2>
        <div class="message-board">
          <div class="message">
            <h3><%= message.title %></h3>
            <p><%= message.text %></p>
            <p>From: <%= message.user.username %></p>
            <hr>
            <p class="timestamp"><%= message.timestamp_formatted %></p>
          </div>
        </div>
        <div class="confirm-delete">
          <form method="post">
            <input type="hidden" name="id" value="message._id">
            <button type="submit">Delete</button>
          </form>
          <form action="/" method="get">
            <button type="submit">Cancel</button>
          </form>
        </div>
      <% } else { %>
        <h2>You must become an admin to see this page</h2>
      <% } %>
    </main>
  </body>
</html>
